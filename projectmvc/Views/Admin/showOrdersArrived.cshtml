@model List<Orders>

@{

    ViewData["Title"] = "showOrdersArrived";
    Layout = "_DashBord";
}

<h1>showOrdersArrived</h1>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-right:170px ; margin-top:50px">
    <h2>Orders</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">DATE</th>
                    <th scope="col">ArrivedDATE</th>
                    <th scope="col">CUSTOMER NAME</th>
                    <th scope="col">Shipper Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>

                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToShortDateString()</td>
                        <td>@order.ArrivedDate</td>
                        <td>@order.Customer.UserName</td>
                        <td>@order.Shipper.shipper.UserName</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

